<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="me.jvegaf.musikbox.context.tracks.domain.Track" table="tracks">
        <composite-id name="id" class="me.jvegaf.musikbox.context.tracks.domain.TrackId" access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="title" class="me.jvegaf.musikbox.context.tracks.domain.TrackTitle" access="field">
            <property name="value" column="title" type="string" access="field"/>
        </component>

        <component name="location" class="me.jvegaf.musikbox.context.tracks.domain.TrackLocation" access="field">
            <property name="value" column="location" type="string" access="field"/>
        </component>

        <component name="duration" class="me.jvegaf.musikbox.context.tracks.domain.TrackDuration" access="field">
            <property name="value" column="duration" type="int" access="field"/>
        </component>

        <component name="artist" class="me.jvegaf.musikbox.context.tracks.domain.TrackArtist" access="field">
            <property name="value" column="artist" type="string" access="field"/>
        </component>

        <component name="album" class="me.jvegaf.musikbox.context.tracks.domain.TrackAlbum" access="field">
            <property name="value" column="album" type="string" access="field"/>
        </component>

        <component name="genre" class="me.jvegaf.musikbox.context.tracks.domain.TrackGenre" access="field">
            <property name="value" column="genre" type="string" access="field"/>
        </component>

        <component name="year" class="me.jvegaf.musikbox.context.tracks.domain.TrackYear" access="field">
            <property name="value" column="year" type="string" access="field"/>
        </component>

        <component name="bpm" class="me.jvegaf.musikbox.context.tracks.domain.TrackBpm" access="field">
            <property name="value" column="bpm" type="int" access="field"/>
        </component>

        <component name="key" class="me.jvegaf.musikbox.context.tracks.domain.TrackInitKey" access="field">
            <property name="value" column="key" type="string" access="field"/>
        </component>

        <component name="comments" class="me.jvegaf.musikbox.context.tracks.domain.TrackComments" access="field">
            <property name="value" column="comments" type="string" access="field"/>
        </component>
    </class>
</hibernate-mapping>
